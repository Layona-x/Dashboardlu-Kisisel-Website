  <input class="form-control" type="text" name="title" id="formFile">
  </div>
  <div class="mb-3">
  <label for="formFile" class="form-label">Animenin Açıklaması</label>
  <input class="form-control" name="description" type="text" id="formFile">
  </div>
  <div class="mb-3">
  <label for="formFile" class="form-label">Animenin Linki</label>
  <input class="form-control" type="text" id="formFile" placeholder="Anime Link">
  </div>
  <input type="submit" class="btn btn-danger" placeholder="Send">
    </form>