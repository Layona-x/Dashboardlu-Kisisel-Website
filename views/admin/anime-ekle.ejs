  <form action="/admin/anime-ekle" enctype="multipart/form-data" method="POST">
  <div class="mb-3">
  <label class="form-label">Animenin Fotoğrafı</label>
  <input class="form-control" type="file" class="form-control-file" name="uploaded_file">
