<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
 
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
  <%- include('./includes/navbar.ejs') -%>
    <% if(!blogs){ %>
      <h1 class="ml-40 text-danger">Herhangi Bir Blog Bulunamadı</h1>
      <% } %>
  <% blogs.forEach(blogs => {%>
  <div class="card ml-20 md:ml-80 w-3/4" style="background-color:#164e63;width: 18rem;height:35%;padding:10px">
    <img src="/uploads/<%= blogs.photo %>" class="card-img-top" style="height:50%;">
    <strong> Başlık</strong> <h4 class="card-title text-white"><%= blogs.title %></h4>
    <strong> Açıklama: </strong><p class="card-description text-white"><%= blogs.description %>
    </div>
    <% }) %>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js" integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK" crossorigin="anonymous"></script>
    </body>
    <style>
      body{
        background-color:#1e293b
      }
    </style>